<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Live+Gov WP1 UploadServlet</display-name>

    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <display-name>UploadServlet</display-name>
        <description>Takes POST request as input and stores them on the file system.</description>
        <servlet-class>eu.liveandgov.wp1.server.UploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Log4jInitServlet</servlet-name>
        <display-name>Log4J Init Servlet</display-name>
        <description>Manage central Logging</description>
        <servlet-class>eu.liveandgov.wp1.shared.logging.Log4jInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

</web-app>
